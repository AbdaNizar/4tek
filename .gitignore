# Add to .gitignore
@"
.env
.env.*
*.pem
*.key
*.p12
*.jks
*.keystore
*.pfx
"@ | Out-File -Append .gitignore -Encoding utf8

# Stop tracking the leaked files (keep them on disk)
git rm --cached path\to\the\secret.file [more files...]
git commit -m "Remove secrets from repo and ignore them"
